{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "no-cond-assign": ["error", "except-parens"],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
    "no-eval": [0],
    "class-methods-use-this": [0],
    "no-use-before-define": [0],
    "no-param-reassign": [0],
    "no-underscore-dangle": [0],
    "no-mixed-operators": [0],
    "prefer-template": [0],
    "semi": ["error", "never"]
  }
}
